<div class="col-md-6 col-md-offset-3">
	<h1>Welcome to the Bullet Journal</h1>

	<% @items.each do |item| %>
		
		<!-- formatting for completed items -->
		<% if item.completed? %>
			<div class = "row item">
		  		<div class = "col-md-8">
				    <h2 style="opacity: 0.5;" ><strike><%= link_to item.title, item %></strike></h2>
				  	<p style="opacity: 0.5;"><%= item.description %></p>
			  	</div>
			  	<div class = "col-md-2">
				  	<p><%= link_to item, method: :delete, data: {confirm: "Are you sure you want to delete this item?" } do%></p>
				  		<i class="fa fa-lg fa-trash"> </i>
				  	<% end %>
			  	</div>
		  		
			</div>

		<!-- formatting for incomplete items -->
		<% else %>
			<div class = "row item">
				<div class = "col-md-8">
					<h2> <%= link_to item.title, item %></h2>
					<p> <%= item.description %></p>
				</div>
				<div class = "col-md-2">
					<p><%= link_to complete_item_path(item), method: :patch do %></p>
						<i class="fa fa-lg fa-check"> </i>
					<% end %>
				</div>
				<div class = "col-md-2">
					<p><%= link_to item, method: :delete, data: {confirm: "Are you sure you want to delete this item?" } do %></p>
						<i class="fa fa-lg fa-trash"> </i>
					<% end %>
				</div>
			</div>
		<% end %>

	<% end %>
</div>