<h1>Welcome to the Bullet Journal</h1>

<% @items.each do |item| %>
	<%= if item.completed? %>
	  <h2 style="opacity: 0.5;" ><strike><%= link_to item.title, item %></strike></h2>
	  <p style="opacity: 0.5;"><%= item.description %></p>
	  <p><%= link_to "Delete", item, method: :delete, data: {confirm: "Are you sure you want to delete this item?" }%></p>

	<%= else %>
	  <h2> style="opacity: 0.5;"<%= link_to item.title, item %></h2>
	  <p> style="opacity: 0.5;" <%= item.description %></p>
	  <p><%= link_to "Mark as Complete", complete_item_path(item), method: :patch %></p>
	  <p><%= link_to "Delete", item, method: :delete, data: {confirm: "Are you sure you want to delete this item?" }%></p>
		<% end %>
	<% end %>

<% end %>